<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/icon" />

                <EditText
                    android:id="@+id/editText_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bkgrd_redlogin1"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/ic_email_black_24dp"
                    android:ems="10"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:textColor="@color/background"
                    android:textColorHint="@color/background" />

                <EditText
                    android:id="@+id/editText_senha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bkgrd_redlogin1"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/ic_lock_red_400_24dp"
                    android:ems="10"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:textColor="@color/background"
                    android:textColorHint="@color/background" />

                <TextView
                    android:id="@+id/redefinir"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:textColor="#FFFFFF"
                    android:text="@string/esqueci_minha_senha"
                    android:textStyle="bold"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/logar"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bkgd_red_2"
                    android:clickable="true"
                    android:onClick="entrar"
                    android:padding="16dp"
                    android:text="@string/entrar"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFFFF"
                    android:text="@string/ainda_n_o_possui_registro"
                    android:textAlignment="center"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/cadastro"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textColor="#FFFFFF"
                    android:text="@string/clique_aqui"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </FrameLayout>



    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone" />

</RelativeLayout>